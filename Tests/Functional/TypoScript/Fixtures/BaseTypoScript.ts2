####################################
# BASIC TYPOSCRIPT FOR THE TEST CASE
####################################

namespace: default = TYPO3.TypoScript

# Definition of custom TypoScript types
prototype(TYPO3.TypoScript:ThreeColumn) < prototype(TYPO3.TypoScript:Template)
prototype(TYPO3.TypoScript:ThreeColumn) {
	templatePath = 'FIXTURE_DIRECTORY/ThreeColumnTemplate.html'
	left = TYPO3.TypoScript:Collection
	left.collection = ${context.children("left").children()}
	center = TYPO3.TypoScript:Collection
	center.collection = ${context.children("center").children()}
	right = TYPO3.TypoScript:Collection
	right.collection = ${context.children("right").children()}
}

prototype(TYPO3.TypoScript:Case).matchers.4242 {
	condition = ${context.is('[instanceof TYPO3.TYPO3:ThreeColumn]')}
	type = 'TYPO3.TypoScript:ThreeColumn'
}


# MAIN PAGE TEMPLATE

page1 = Page
page1.body.templatePath = 'FIXTURE_DIRECTORY/WebsiteTemplate.html'
page1.body.sections {
	teaser = TYPO3.TypoScript:Collection
	teaser.collection = ${context.children('teaser').children()}

	main = TYPO3.TypoScript:Collection
	main.collection = ${context.children('main').children()}

	sidebar = TYPO3.TypoScript:Collection
	sidebar.collection = ${context.children('sidebar').children()}
}